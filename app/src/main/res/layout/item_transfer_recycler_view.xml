<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_and_ripple_item_transfer_menu_wallet_fragment"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imageViewIconItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:src="@drawable/ic_to_a_card" />

    <TextView
        android:id="@+id/text_viewTitleItem"
        style="@style/MyTextStyle16spBoldBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Wallet" />

</LinearLayout>