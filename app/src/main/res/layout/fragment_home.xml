<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_info_top_home_fragment"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewHelloUsername"
        style="@style/MyTextStyle22spBoldWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:titleMarginStart="50dp"
        tools:text="Hi,Sergey!" />

    <TextView
        android:id="@+id/textViewTotal"
        style="@style/MyTextStyle22spBoldWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/textTotalMoney"
        app:layout_constraintBottom_toTopOf="@id/textViewTotalMoney"
        app:layout_constraintTop_toBottomOf="@+id/textViewHelloUsername"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textViewTotalMoney"
        style="@style/MyTextStyle22spBoldWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/constraintLayoutContainerAccountsAndCardsLists"
        app:layout_constraintTop_toBottomOf="@+id/textViewTotal"
        tools:text="$500.000.000.00" />

    <LinearLayout
        android:id="@+id/constraintLayoutContainerAccountsAndCardsLists"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_info_bottom_recycler_view"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.6">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAccountsCards"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            tools:itemCount="5"
            tools:listitem="@layout/item_card_recycler_view" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>