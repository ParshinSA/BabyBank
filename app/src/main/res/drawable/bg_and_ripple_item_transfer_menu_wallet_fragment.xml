<?xml version="1.0" encoding="utf-8"?>

<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/bgRippleDefault">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <size
                android:width="146dp"
                android:height="80dp" />

            <solid android:color="@color/bgRippleDefault" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size
                android:width="146dp"
                android:height="80dp" />

            <solid android:color="@color/colorBackgroundItemRecyclerView" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</ripple>