<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/unselectedNavigationColor">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <size
                android:width="121dp"
                android:height="52dp" />

            <solid android:color="@color/bgRippleDefault" />
            <corners android:radius="15dp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size
                android:width="121dp"
                android:height="52dp" />

            <solid android:color="@color/bgButtonDefault" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</ripple>